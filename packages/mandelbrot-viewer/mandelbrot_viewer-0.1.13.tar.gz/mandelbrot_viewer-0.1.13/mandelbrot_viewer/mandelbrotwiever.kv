BoxLayout:
    orientation: 'vertical'
    
    BoxLayout:
        id: slider_box
        orientation: 'horizontal'
        size_hint_y: 0.1
        
        BoxLayout:
            orientation: 'vertical'
            
            Label:
                size_hint_y: 0.05
                text: "Set the resolution of the image"
            
            ResolutionSlider:
                size_hint_y: 0.05
                id: res_slide
                min: 10
                max: 100
                value: 30
                step: 1
        
        BoxLayout:
            orientation: 'vertical'
            
            Label:
                size_hint_y: 0.05
                text: "Set the iteration limit"
            
            DepthSlider:
                size_hint_y: 0.05
                id: depth_slide
                min: 5
                max: 17
                value: 10
                step: 0.1
    
    Label:
        id: info_label1
        size_hint_y: 0.05
        text: "Zoom: 1"
    Label:
        id: info_label2
        size_hint_y: 0.05
        text: "Center: x= y="
    Label:
        id: info_label3
        size_hint_y: 0.05
        text: "Iterations: 1024"
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.05
        
        Label:
            id: progbar_txt
            text: "Progress: 100%"
            size_hint_x: 0.2
            
        ProgressBar:
            id: progbar
            max: 100
            value: 100
            size_hint_y: 1
            size_hint_x: 0.6
            height: 100
        
        Button:
            text: "Interrupt"
            on_press: app.interrupt()
            size_hint_x: 0.2
    
    FloatLayout:
        id: float_layout
        #size_hint_y: 0.7
        
        MultiTouchScatter:
            id: mt_scatter
            size_hint: None, None  # We define a fixed size for Scatter
            size: root.width, root.height  # Make Scatter fill the entire window
            do_rotation: False  # Allow rotation
            do_scale: True  # Allow scaling
            do_translation: True # Allow moving
            auto_bring_to_front: True
            
            TransparentWidget:
                size: self.parent.size
                
        
        InteractiveCanvas:
            id: interactive_canvas
            
