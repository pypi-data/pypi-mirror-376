# Include only essential package files
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include only the core component registry
include config/component_registry.json

# Include pretrained models for immediate usability
include models/*.joblib
include models/*.pth
include models/*.json
include final_results/saved_models/*.joblib

# Explicitly exclude all unnecessary directories and files
global-exclude web-dashboard/
global-exclude setup/
global-exclude research/
global-exclude tests/
global-exclude demos/
global-exclude documentation/
global-exclude assets/
global-exclude confound_results/
global-exclude scripts/
global-exclude *.pyc
global-exclude __pycache__/
global-exclude .git*
global-exclude .pytest_cache/
global-exclude .benchmarks/
global-exclude *.egg-info/
global-exclude build/
global-exclude dist/
global-exclude .venv/
global-exclude venv/
global-exclude *.pkl
# Allow .joblib and .pth files for pretrained models
# global-exclude *.pickle
global-exclude *.log
global-exclude .DS_Store
global-exclude Thumbs.db
