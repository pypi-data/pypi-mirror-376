{
  "name": "minecraft-datapack-language",
  "displayName": "Minecraft Datapack Language (MDL)",
  "description": "Syntax highlighting, snippets, and build tasks for MDL language with explicit scoping, variables, control flow, and Minecraft datapack generation",
  "version": "1.0.0",
  "icon": "icons/icon-128.png",
  "publisher": "mdl",
  "repository": {
    "type": "git",
    "url": "https://github.com/aaron777collins/MinecraftDatapackLanguage.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "minecraft",
    "datapack",
    "mdl",
    "syntax",
    "highlighting",
    "scopes",
    "variables",
    "scope-selectors",
    "explicit-scopes",
    "minecraft-commands"
  ],
  "activationEvents": [
    "onLanguage:mdl",
    "onCommand:mdl.build"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mdl",
        "aliases": [
          "MDL",
          "Minecraft Datapack Language"
        ],
        "extensions": [
          ".mdl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mdl",
        "scopeName": "source.mdl",
        "path": "./syntaxes/mdl.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "MDL Dark Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/mdl-color-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "mdl",
        "path": "./snippets/mdl.json"
      }
    ],
    "commands": [
      {
        "command": "mdl.build",
        "title": "MDL: Build current file"
      },
      {
        "command": "mdl.checkWorkspace",
        "title": "MDL: Check Workspace"
      },
      {
        "command": "mdl.newProject",
        "title": "MDL: Create new project"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mdl.build",
          "when": "resourceExtname == .mdl"
        },
        {
          "command": "mdl.checkWorkspace",
          "when": "workspaceHasFiles:*.mdl"
        },
        {
          "command": "mdl.newProject"
        }
      ],
      "explorer/context": [
        {
          "command": "mdl.build",
          "when": "resourceExtname == .mdl",
          "group": "build"
        }
      ]
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0",
    "@types/vscode": "^1.90.0"
  }
}