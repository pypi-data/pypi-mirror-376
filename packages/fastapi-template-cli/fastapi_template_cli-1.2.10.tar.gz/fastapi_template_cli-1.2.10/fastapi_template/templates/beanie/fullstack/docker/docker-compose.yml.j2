version: '3.8'

services:
  web:
    build: .
    ports:
      - "8000:8000"
    environment:
      - MONGODB_URL=mongodb://mongo:27017/{{ project_name }}
      - DATABASE_NAME={{ project_name }}
      - REDIS_URL=redis://redis:6379/0
      - SECRET_KEY=your-secret-key-here
    depends_on:
      - mongo
      - redis
    volumes:
      - .:/app
    restart: unless-stopped

  mongo:
    image: mongo:7
    ports:
      - "27017:27017"
    volumes:
      - mongo_data:/data/db
    restart: unless-stopped

  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"
    restart: unless-stopped

  celery:
    build: .
    command: celery -A app.workers.celery_app worker --loglevel=info
    environment:
      - MONGODB_URL=mongodb://mongo:27017/{{ project_name }}
      - DATABASE_NAME={{ project_name }}
      - REDIS_URL=redis://redis:6379/0
      - SECRET_KEY=your-secret-key-here
    depends_on:
      - mongo
      - redis
    volumes:
      - .:/app
    restart: unless-stopped

  celery-beat:
    build: .
    command: celery -A app.workers.celery_app beat --loglevel=info
    environment:
      - MONGODB_URL=mongodb://mongo:27017/{{ project_name }}
      - DATABASE_NAME={{ project_name }}
      - REDIS_URL=redis://redis:6379/0
      - SECRET_KEY=your-secret-key-here
    depends_on:
      - mongo
      - redis
    volumes:
      - .:/app
    restart: unless-stopped

volumes:
  mongo_data: