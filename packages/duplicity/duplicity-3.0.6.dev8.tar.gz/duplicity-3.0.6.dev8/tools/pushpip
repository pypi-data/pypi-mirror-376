set -e

if [ "$#" -ne 0 ]; then
    echo "usage: $0"
    exit 2
fi

VERSION=`./setup.py --version`
echo "$0 of ${VERSION}"

if [ -e "wheelhouse" ]; then
    mv wheelhouse/duplicity-${VERSION}-*.whl dist
    rmdir wheelhouse
fi

## upload to pypi
twine upload --non-interactive dist/duplicity-${VERSION}*.tar.gz
twine upload --non-interactive dist/duplicity-${VERSION}*.whl
