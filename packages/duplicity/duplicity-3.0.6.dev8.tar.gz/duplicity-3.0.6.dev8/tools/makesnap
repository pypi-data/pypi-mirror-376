set -e

ARCH="amd64,arm64,armhf,ppc64el,riscv64,s390x"
if [ "$#" -gt 1 ]; then
    echo "usage: $0 <comma-sep-list-of-architectures>"
    echo "      - default is all: $ARCH"
    exit 2
elif [ "$#" -eq 1 ]; then
    BUILD="$1"
else
    BUILD="$ARCH"
fi

# build snap via remote build on LP
snapcraft remote-build --build-for=${BUILD} --launchpad-accept-public-upload
