      "command": ["shutdown", "/s", "/t", "30"],
      "response": "Shutting down the computer in 30 seconds. Say cancel to stop.",
      "requires_confirmation": true,
      "confirmation_message": "Are you sure you want to shutdown the computer? This will close all programs and shut down Windows."
    },
    {
      "triggers": ["restart computer", "restart", "reboot", "reboot computer", "restart the computer", "reboot the computer", "restart system", "reboot system", "restart the system", "reboot the system"],
      "action": "system_command",
