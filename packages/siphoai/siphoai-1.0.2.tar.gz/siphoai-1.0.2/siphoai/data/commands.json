  "system_commands": [
    {
      "triggers": ["minimize all", "show desktop", "minimize everything", "hide all windows", "minimize all windows", "clear desktop", "go to desktop", "show the desktop", "hide all apps", "minimize apps", "get to desktop", "desktop view"],
