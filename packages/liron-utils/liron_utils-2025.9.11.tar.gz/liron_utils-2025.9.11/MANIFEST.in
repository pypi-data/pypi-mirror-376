include README.md
include LICENSE
include pyproject.toml

# Include all README files and documentation in subdirectories
recursive-include liron_utils *.md
recursive-include liron_utils *.txt
recursive-include liron_utils *.yml
recursive-include liron_utils *.yaml
recursive-include liron_utils *.json
recursive-include liron_utils *.cfg
recursive-include liron_utils *.ini

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
