# MANIFEST.in - Include additional files in the package

# Documentation files
include README.md
include DOCUMENTATION.md
include DOCUMENTATION_EN.md
include DOCUMENTATION_FR.md
include INSTALLATION.md
include USER_GUIDE.md
include QUICK_START.md
include FAQ.md

# License and legal
include LICENSE*
include CHANGELOG.md

# Configuration files
include requirements.txt
include requirements-dev.txt
include pytest.ini
include Makefile

# Project metadata
include setup.py
include pyproject.toml

# GUI help content
recursive-include src/emailer_simple_tool/gui/help *.md

# Exclude development and build files
exclude build.sh
exclude publish.sh
exclude PROJECT_DISTRIBUTION.md
exclude .DS_Store
exclude *.pyc
exclude __pycache__/

# Exclude test and development directories
recursive-exclude tests *
recursive-exclude QChat *
recursive-exclude .samples *
recursive-exclude .private *
recursive-exclude .pytest_cache *
recursive-exclude .git *
recursive-exclude .obsidian *

# Exclude development files
exclude demo_*.py
exclude test_*.py
exclude create_*.py
exclude debug_*.py
exclude *_results.md
exclude *_SUMMARY.md
exclude docx_formatting_guide.md
exclude performance_results.md
