---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/Header.astro';
---

<style>
/* Custom header with navigation buttons */
.custom-nav {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-left: auto;
}

.nav-link {
  color: var(--sl-color-text);
  text-decoration: none;
  padding: 0.5rem 1rem;
  border-radius: 0.375rem;
  font-weight: 500;
  transition: all 0.2s;
  font-size: 0.875rem;
}

.nav-link:hover {
  background: var(--sl-color-gray-6);
  color: var(--sl-color-accent);
}

.nav-link.primary {
  background: var(--sl-color-accent);
  color: white;
}

.nav-link.primary:hover {
  background: var(--sl-color-accent-high);
  color: white;
}

/* Ensure header has proper flex layout */
.sl-flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .custom-nav {
    display: none;
  }
}
</style>

<!-- Custom header with navigation -->
<header class="header sl-flex">
  <div class="sl-flex">
    <!-- Logo/Brand -->
    <a href="/" class="site-title">
      <span class="brand-text">âš¡ Zenith</span>
    </a>
  </div>
  
  <!-- Custom Navigation -->
  <nav class="custom-nav">
    <a href="/quick-start" class="nav-link">Quick Start</a>
    <a href="/examples/hello-world" class="nav-link">Examples</a>
    <a href="/api/application" class="nav-link">API Docs</a>
    <a href="https://github.com/nijaru/zenith" class="nav-link primary" target="_blank">
      GitHub
    </a>
  </nav>
  
  <!-- Theme selector and other controls -->
  <div class="sl-flex header-controls">
    <!-- This will include the theme selector -->
    <Default {...Astro.props} />
  </div>
</header>

<style>
.header {
  border-bottom: 1px solid var(--sl-color-gray-6);
  padding: 0.75rem 1rem;
  background: var(--sl-color-bg-nav);
}

.site-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--sl-color-text);
  text-decoration: none;
}

.brand-text {
  background: linear-gradient(135deg, #60a5fa 0%, #a78bfa 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.header-controls {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}
</style>