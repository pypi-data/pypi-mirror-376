{
    // The versions of Python to test against
    "pythons": ["2.7"],

    // timeout in seconds for installing dependencies
    "install_timeout": 3142,
    // timeout in seconds for all benchmarks
    "default_benchmark_timeout": 32.5,

    // The matrix of dependencies to test.  Each key is the name of a
    // package (in PyPI) and the values are version numbers.  An empty
    // list indicates to just test against the default (latest)
    // version.
    "matrix": {
        "numpy": ["1.8"],
        "Cython": [],
        "jinja2": [],
    },

    // The git URL to the project being tested
    "repo": "https://github.com/astropy/astropy.git",

    "project": "astropy",

    "project_url": "https://www.astropy.org/",

    "show_commit_url": "https://github.com/astropy/astropy/commit/",

    "version": 1,

    "plugins": [".example_plugin", "github"],

    "benchmark_dir": "benchmark",

    "build_cache_size": 10
}
