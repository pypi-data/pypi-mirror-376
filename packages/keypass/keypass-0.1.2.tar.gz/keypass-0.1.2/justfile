@default: venv update-version build

@venv:
    uv sync --extra dev

@update-version:
    uv run keypass/_version.py

@build:
    uv build --no-sources

@test:
    uv run tests/test_key_not_from_system.py

@publish: default
    uv publish --token "$(pass show pypi/token)"


