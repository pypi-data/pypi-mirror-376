'brazil_package_spec@1.0'

common::{
  name: "SageMakerCheckpointing",
  major_version: "1.0",

  dependencies: {
    default_closure: run,

    closures: {
      run: public::{
        include: [self],
      },
    },
  },

  build: {
    command : "peru-hatch",

    env: {
      PATH: [
        (farm "PeruHatch" "bin"),
        (env PATH),
      ],
    },

    outputs: {
      public_dir : "./build",
      private_dir : "./private",
      cleaned: [ "./build", "./private", "./.mypy_cache", "./.hatch_venv", "./.pytest_cache", "./.coverage" ],
    },
  },
}
