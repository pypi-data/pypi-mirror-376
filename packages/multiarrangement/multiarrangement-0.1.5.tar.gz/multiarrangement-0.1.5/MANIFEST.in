# Include data files
include README.md
include LICENSE
include pyproject.toml
include img1.PNG
include Audio.png
include test_audio_icon_new.png
include results/.gitkeep

# Include package data
recursive-include multiarrangement/data *.txt
recursive-include multiarrangement/data *.xlsx
recursive-include multiarrangement/data *.png *.jpg *.jpeg *.gif
recursive-include multiarrangement/data *.mp4 *.avi *.mov *.mkv *.wmv

# Include demo videos from inside package
recursive-include multiarrangement/demovids *.mp4 *.avi *.mov *.mkv *.wmv

# Include demo media folders inside package (exclude 58videos to keep size reasonable)
recursive-include multiarrangement/15videos *.avi *.mp4 *.mov *.mkv *.wmv
recursive-include multiarrangement/15images *.png *.jpg *.jpeg *.bmp *.tif *.tiff *.webp
recursive-include multiarrangement/15audios *.mp3 *.wav *.ogg *.flac *.aac *.m4a
recursive-include multiarrangement/sample_audio *.mp3 *.wav *.ogg *.flac *.aac *.m4a

# Include example data
recursive-include multiarrangement/ExampleData *.xlsx *.csv

# Include standalone scripts for backward compatibility
include *.py

# Exclude cache and build files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .git*
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll
recursive-include multiarrangement/ljcr_cache *.txt
prune output
