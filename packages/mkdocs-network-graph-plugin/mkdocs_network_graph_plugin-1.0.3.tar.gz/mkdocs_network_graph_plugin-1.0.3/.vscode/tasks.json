{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Development Environment",
            "type": "shell",
            "command": "uv sync && uv python install 3.10 3.11 3.12 3.13 && uv pip install -e '.[dev]' && uv run pre-commit install",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Serve MkDocs Site",
            "type": "shell",
            "command": "uv run mkdocs serve",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Update Pre-Commit Hooks",
            "type": "shell",
            "command": "uv run pre-commit autoupdate",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Run Nox Lint Session",
            "type": "shell",
            "command": "uv run nox -s lint",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Run Nox Tests Session",
            "type": "shell",
            "command": "uv run nox -s tests",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
