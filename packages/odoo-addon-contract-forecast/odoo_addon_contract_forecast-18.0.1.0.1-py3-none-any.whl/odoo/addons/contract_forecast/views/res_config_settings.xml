<odoo>
    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="contract.res_config_settings_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='contract']" position="inside">
                <setting class="col-12 col-lg-6 o_setting_box">
                    <field name="enable_contract_forecast" />
                </setting>
                <setting
                    class="col-12 col-lg-6 o_setting_box"
                    invisible="not enable_contract_forecast"
                >
                    <label
                        for="contract_forecast_interval"
                        string="Forecast Interval"
                        class="oe_inline"
                    />
                    <field name="contract_forecast_interval" class="oe_inline" />
                    <field name="contract_forecast_rule_type" class="oe_inline" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
