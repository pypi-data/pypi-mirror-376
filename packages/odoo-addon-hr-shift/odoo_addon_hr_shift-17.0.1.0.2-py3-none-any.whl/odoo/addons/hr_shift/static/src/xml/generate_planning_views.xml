<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="ShiftPlanning.generate_planning_button" owl="1">
        <t t-if="showGeneratePlanning">
            <button
                type="button"
                class="btn btn-secondary o_button_generate_planning"
                t-on-click.prevent="onGeneratePlanning"
            >
            Generate Planning
        </button>
    </t>
    </t>

    <t t-name="hr_shift.ListView.Buttons" owl="1">
        <t t-call="ShiftPlanning.generate_planning_button" />
    </t>

    <t t-name="hr_shift.KanbanView.Buttons" owl="1">
        <t t-call="ShiftPlanning.generate_planning_button" />
    </t>
</templates>
