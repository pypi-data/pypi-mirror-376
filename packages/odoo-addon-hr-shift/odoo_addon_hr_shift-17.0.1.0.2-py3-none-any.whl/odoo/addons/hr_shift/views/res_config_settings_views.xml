<?xml version="1.0" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//block[@name='work_organization_setting_container']"
                position="inside"
            >
                <setting
                    company_dependent="1"
                    name="shift_working_week"
                    string="Default Working Week"
                    help="Set default company's default working start and end day to be used in shifts span"
                >
                    <label
                        for="shift_start_day"
                        string="Week gos from"
                        class="o_light_label"
                    />
                    <field name="shift_start_day" class="oe_inline" required="1" />
                    <label for="shift_end_day" string="to" class="ms-2 o_light_label" />
                    <field name="shift_end_day" class="oe_inline" required="1" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
