{
    "python.analysis.diagnosticMode": "openFilesOnly",
    //////////////////////////////////////////////////////////////
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "peacock.color": "#b30a60",
    "peacock.remoteColor": "#b30a82",
    "cSpell.words": [
        "asname",
        "classdef",
        "functiondef",
        "intellij",
        "noblack",
        "outputjson",
        "pyrightconfig",
        "pytestconfig",
        "rootpath",
        "stubfile",
        "typehints",
        "ufoo",
        "upackage"
    ],
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "workbench.colorCustomizations": {
        "activityBar.activeBorder": "#0bb45d",
        "activityBar.activeBackground": "#e30d7a",
        "activityBar.background": "#e30d7a",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#71d30c",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#e7e7e799",
        "editorGroup.border": "#e30d7a",
        "panel.border": "#e30d7a",
        "sash.hoverBorder": "#e30d7a",
        "statusBar.background": "#b30a60",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#e30d7a",
        "statusBarItem.remoteBackground": "#b30a60",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "tab.activeBorder": "#e30d7a",
        "titleBar.activeBackground": "#b30a60",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#b30a6099",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "python.terminal.activateEnvInCurrentTerminal": true,
    "todo-tree.filtering.ignoreGitSubmodules": true,
    "todo-tree.filtering.excludeGlobs": [
        "**/node_modules",
        "**/.venv"
    ],
    // "todo-tree.general.debug": true,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "[ ]",
        "[x]",
        "DOC",
        "PYRIGHT"
    ],
    "debug.allowBreakpointsEverywhere": true,
    "debug.terminal.clearBeforeReusing": true,
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/repos/**": true
    },
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "yaml.schemas": {
        "https://docs.sourcery.ai/resources/sourcery_yaml_schema.json": ".sourcery.yaml"
    },
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "todo-tree.tree.scanMode": "open files",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true
    },
    "ruff.fixAll": false,
    "ruff.lint.enable": false,
    "editor.formatOnPaste": true,
    "ruff.lineLength": 140,
    "ruff.configurationPreference": "filesystemFirst",
    "python.languageServer": "Pylance",
    "austin.mode": "Wall time",
    "austin.binaryMode": true,
    "python.analysis.aiHoverSummaries": true,
}