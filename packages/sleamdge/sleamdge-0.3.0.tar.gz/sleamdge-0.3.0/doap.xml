<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#">
    <Project xmlns="http://usefulinc.com/ns/doap#" xmlns:foaf="http://xmlns.com/foaf/0.1/"
        xmlns:xmpp="https://linkmauve.fr/ns/xmpp-doap#">
        <name>sleamdge</name>

        <shortdesc xml:lang="en">A feature-rich Steam/XMPP gateway</shortdesc>


        <homepage rdf:resource="https://codeberg.org/slidge/sleamdge" />
        <download-page rdf:resource="https://codeberg.org/slidge/sleamdge/releases" />
        <bug-database rdf:resource="https://codeberg.org/slidge/sleamdge/issues" />
        <developer-forum rdf:resource="xmpp:slidge@conference.nicoco.fr?join" />
        <support-forum rdf:resource="xmpp:slidge@conference.nicoco.fr?join" />

        <license
            rdf:resource="https://codeberg.org/slidge/sleamdge/src/branch/main/LICENSE" />

        <language>en</language>

        <programming-language>Python</programming-language>

        <os>Linux</os>

        <category rdf:resource="https://linkmauve.fr/ns/xmpp-doap#category-component" />

        <maintainer>
            <foaf:Person>
                <foaf:name>Nicoco</foaf:name>
                <foaf:homepage rdf:resource="https://nicoco.fr" />
            </foaf:Person>
        </maintainer>

        <repository>
            <GitRepository>
                <browse rdf:resource="https://codeberg.org/slidge/sleamdge" />
                <location rdf:resource="https://codeberg.org/slidge/sleamdge.git" />
            </GitRepository>
        </repository>

        <implements rdf:resource="https://xmpp.org/rfcs/rfc6120.html" />
        <implements rdf:resource="https://xmpp.org/rfcs/rfc6121.html" />
        <implements rdf:resource="https://xmpp.org/rfcs/rfc6122.html" />
        <implements rdf:resource="https://xmpp.org/rfcs/rfc7590.html" />

        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0045.html" />
                <xmpp:status>partial</xmpp:status>
                 <xmpp:note>Group and clan channels are exposed as MUCs. It's not possible to moderate them from slidge yet.</xmpp:note>
            </xmpp:SupportedXep>
        </implements>
        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0085.html" />
                <xmpp:status>complete</xmpp:status>
                 <xmpp:note>Typing notifications only work in direct chats only.</xmpp:note>
            </xmpp:SupportedXep>
        </implements>
        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0184.html" />
                <xmpp:status>complete</xmpp:status>
                 <xmpp:note>Delivery receipts are emitted by the Steam servers, not the recipients.</xmpp:note>
            </xmpp:SupportedXep>
        </implements>
        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0201.html" />
                <xmpp:status>wontfix</xmpp:status>
                 <xmpp:note>Threads do not exist in Steam Chat.</xmpp:note>
            </xmpp:SupportedXep>
        </implements>
        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0319.html" />
                <xmpp:status>complete</xmpp:status>

            </xmpp:SupportedXep>
        </implements>
        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0308.html" />
                <xmpp:status>wontfix</xmpp:status>
                 <xmpp:note>Does not exist in Steam Chat.</xmpp:note>
            </xmpp:SupportedXep>
        </implements>
        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0333.html" />
                <xmpp:status>partial</xmpp:status>
                 <xmpp:note>Used to sync read state between slidge and other steam chat clients, but there are no recipient-emitted read marks in Steam Chat.</xmpp:note>
            </xmpp:SupportedXep>
        </implements>
        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0363.html" />
                <xmpp:status>partial</xmpp:status>
                 <xmpp:note>Sends the attachment URLs as text.</xmpp:note>
            </xmpp:SupportedXep>
        </implements>
        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0424.html" />
                <xmpp:status>planned</xmpp:status>

            </xmpp:SupportedXep>
        </implements>
        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0444.html" />
                <xmpp:status>partial</xmpp:status>
                 <xmpp:note>Only a few emojis are allowed in Steam Chat, and custom emojis do not exist in XMPP.</xmpp:note>
            </xmpp:SupportedXep>
        </implements>
        <implements>
            <xmpp:SupportedXep>
                <xmpp:xep rdf:resource="https://xmpp.org/extensions/xep-0461.html" />
                <xmpp:status>wontfix</xmpp:status>
                 <xmpp:note>No replies in Steam Chat.</xmpp:note>
            </xmpp:SupportedXep>
        </implements>


    </Project>
</rdf:RDF>
