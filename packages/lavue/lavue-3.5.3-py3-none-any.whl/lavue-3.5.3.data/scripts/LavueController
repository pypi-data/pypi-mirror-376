    attr_list = {
        'BeamCenterX':
            [[tango.DevDouble,
              tango.SCALAR,
              tango.READ_WRITE],
             {
                 'label': "beam center x",
                 'unit': "pixels",
                 'abs_change': "0.0001",
                 'Memorized': "true"
             }],
        'BeamCenterY':
            [[tango.DevDouble,
              tango.SCALAR,
              tango.READ_WRITE],
             {
                 'label': "beam center y",
                 'unit': "pixels",
                 'abs_change': "0.0001",
