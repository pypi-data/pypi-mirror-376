# models.py
from faster_app.models import UUIDModel, DateTimeModel, StatusModel
from tortoise import fields

class User(UUIDModel, DateTimeModel, StatusModel):
    """ç”¨æˆ·æ¨¡å‹"""
    name = fields.CharField(max_length=50, description="ç”¨æˆ·å")
    email = fields.CharField(max_length=100, unique=True, description="é‚®ç®±")

    class Meta:
        table = "users"
        table_description = "ç”¨æˆ·è¡¨"
```

### 3. è·¯ç”±å®šä¹‰

```python
# routes.py
from fastapi import APIRouter
from faster_app.routes import ApiResponse

router = APIRouter(prefix="/api/v1/users", tags=["ç”¨æˆ·ç®¡ç†"])

@router.get("/", response_model=ApiResponse)
async def get_users():
    """è·å–ç”¨æˆ·åˆ—è¡¨"""
    users = await User.all()
    return ApiResponse(
        message="è·å–ç”¨æˆ·åˆ—è¡¨æˆåŠŸ",
        data={"users": users, "total": len(users)}
    )

@router.post("/", response_model=ApiResponse)
async def create_user(name: str, email: str):
    """åˆ›å»ºç”¨æˆ·"""
    user = await User.create(name=name, email=email)
    return ApiResponse(
        message="ç”¨æˆ·åˆ›å»ºæˆåŠŸ",
        data={"user": user}
    )
```

### 4. å‘½ä»¤å®šä¹‰

```python
# commands.py
from faster_app.commands import BaseCommand

class UserCommand(BaseCommand):
    """ç”¨æˆ·ç®¡ç†å‘½ä»¤"""

    async def create_user(self, name: str, email: str):
        """åˆ›å»ºç”¨æˆ·"""
        user = await User.create(name=name, email=email)
        print(f"âœ… ç”¨æˆ·åˆ›å»ºæˆåŠŸ: {user.name} ({user.email})")

    async def list_users(self):
        """åˆ—å‡ºæ‰€æœ‰ç”¨æˆ·"""
        users = await User.all()
        print(f"ğŸ“‹ å…±æ‰¾åˆ° {len(users)} ä¸ªç”¨æˆ·:")
        for user in users:
            print(f"  - {user.name} ({user.email})")
```

