# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Include configuration files
recursive-include config *.yaml *.yml *.json
recursive-include log_generator/patterns *.yaml *.yml *.json

# Include documentation
recursive-include docs *.md *.rst *.txt *.py
recursive-include docs/_static *
recursive-include docs/_templates *

# Include examples
recursive-include examples *.py *.yaml *.yml *.json *.md

# Include test data (but not test code)
recursive-include tests/data *.yaml *.yml *.json *.log *.txt
recursive-include tests/fixtures *.yaml *.yml *.json *.log *.txt

# Include error patterns and demo patterns
recursive-include error_patterns *.json
recursive-include demo_patterns *.json
recursive-include error_scenarios *.json

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .pytest_cache
global-exclude *.so

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude Makefile
exclude .coverage
exclude .coveragerc
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude * *.egg-info

# Exclude IDE files
recursive-exclude * .vscode
recursive-exclude * .idea
recursive-exclude * *.swp
recursive-exclude * *.swo

# Exclude build artifacts
exclude build
exclude dist
recursive-exclude build *
recursive-exclude dist *