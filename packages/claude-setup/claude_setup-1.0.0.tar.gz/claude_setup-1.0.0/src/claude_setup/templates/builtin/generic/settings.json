{
  "model": "claude-opus-4-1-20250805",
  "permissions": {
    "allow": [
      "Read(**/*)",
      "Write(**/*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(make:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Delete(**)",
      "Bash(rm:*)",
      "Bash(sudo:*)"
    ]
  },
  "env": {
    "PROJECT_TYPE": "generic",
    "CLAUDE_SETUP_VERSION": "1.0.0"
  }
}