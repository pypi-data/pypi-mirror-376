{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'group:allNonMajor',
  ],
  packageRules: [
    {
      description: [
        "Don't bump Python runtime to 3.14 yet",
      ],
      matchDepNames: [
        'python',
      ],
      allowedVersions: '<3.14',
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'mplatform/manifest-tool',
      ],
      versioning: 'regex:^alpine-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$',
    },
    {
      groupName: 'Keep python images in sync',
      matchPackageNames: [
        'ghcr.io/astral-sh/uv',
        'python',
        'uv',
      ],
    },
  ],
  customManagers: [
    {
      description: [
        'Update Debian OS version in python images',
      ],
      customType: 'regex',
      managerFilePatterns: [
        '/^\\.gitlab-ci\\.yml$/',
        '/^Dockerfile$/',
      ],
      matchStrings: [
        '(?<depName>ghcr.io/astral-sh/uv):(?<compatPrefix>\\d+\\.\\d+\\.\\d+-python\\d+\\.\\d+-)(?<currentValue>[^\\s-]+)(?<compatSuffix>(?:-slim)?)',
        '(?<depName>python):(?<compatPrefix>\\d+\\.\\d+-slim-)(?<currentValue>\\S+)',
      ],
      datasourceTemplate: 'docker',
      versioningTemplate: 'debian',
      extractVersionTemplate: '^{{compatPrefix}}(?<version>[a-z]+){{compatSuffix}}$',
    },
    {
      description: [
        'Update python version in uv images',
      ],
      customType: 'regex',
      managerFilePatterns: [
        '/^\\.gitlab-ci\\.yml$/',
        '/^Dockerfile$/',
      ],
      matchStrings: [
        '(?<depName>ghcr.io/astral-sh/uv):(?<compatPrefix>\\d+\\.\\d+\\.\\d+-python)(?<currentValue>[^-]+)(?<compatSuffix>[a-z-]+)',
      ],
      datasourceTemplate: 'docker',
      versioningTemplate: 'pep440',
      extractVersionTemplate: '^{{compatPrefix}}(?<version>\\d+\\.\\d+){{compatSuffix}}$',
    },
    {
      description: [
        'Update uv version in templated test image',
      ],
      customType: 'regex',
      managerFilePatterns: [
        '/^\\.gitlab-ci\\.yml$/',
      ],
      matchStrings: [
        '(?<depName>ghcr.io/astral-sh/uv):(?<currentValue>[^-]+)-python\\$\\{PYTHON_VERSION\\}',
      ],
      datasourceTemplate: 'pypi',
      depNameTemplate: 'uv',
    },
  ],
}
