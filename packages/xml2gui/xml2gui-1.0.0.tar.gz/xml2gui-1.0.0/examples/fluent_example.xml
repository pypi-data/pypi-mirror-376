<?xml version="1.0" encoding="UTF-8"?>
<application>
    <!-- 窗口属性 -->
    <window title="Xml2GUI框架示例" width="900" height="700"/>
    
    <!-- 导入模块 -->
    <imports>
        <import module="sys"/>
        <import module="os"/>
        <import module="datetime"/>
    </imports>
    
    <!-- 样式定义 -->
    <styles>
        <style name="title_style">
            <font-size>28px</font-size>
            <font-weight>bold</font-weight>
            <color>#1E1E1E</color>
        </style>
        <style name="subtitle_style">
            <font-size>18px</font-size>
            <color>#6E6E6E</color>
        </style>
    </styles>
    
    <!-- 布局定义 -->
    <layouts>
        <layout id="main_layout" type="VBoxLayout">
            <!-- 标题区域 -->
            <layout id="title_layout" type="VBoxLayout">
                <widget id="title_label" type="Label" text="PyQt-Fluent-Widgets 示例"/>
                <widget id="subtitle_label" type="Label" text="使用Xml2GUI框架创建现代化界面"/>
            </layout>
            
            <!-- 按钮区域 -->
            <layout id="buttons_layout" type="HBoxLayout">
                <widget id="primary_button" type="PrimaryPushButton" text="主要按钮"/>
                <widget id="normal_button" type="PushButton" text="普通按钮"/>
                <widget id="toggle_button" type="TogglePushButton" text="切换按钮"/>
                <widget id="dropdown_button" type="DropDownPushButton" text="下拉按钮"/>
            </layout>
            
            <!-- 输入区域 -->
            <layout id="input_layout" type="FormLayout">
                <widget id="name_label" type="Label" text="文件路径:"/>
                <widget id="name_input" type="LineEdit" placeholder="请输入"/>
                
                <widget id="age_label" type="Label" text="引导:"/>
                <widget id="age_spinbox" type="SpinBox" minimum="1" maximum="120" value="25"/>
                
                <widget id="gender_label" type="Label" text="引导方式:"/>
                <widget id="gender_combo" type="ComboBox">
                    <!-- 这里需要在生成的Python代码中手动添加选项 -->
                    <item>文件</item>
                    <item>目录</item>
                </widget>
                
                <widget id="description_label" type="Label" text="描述:"/>
                <widget id="description_text" type="TextEdit" placeholder="请输入描述信息"/>
            </layout>
            
            <!-- 开关区域 -->
            <layout id="switch_layout" type="HBoxLayout">
                <widget id="switch_label" type="Label" text="启用功能:"/>
                <widget id="feature_switch" type="SwitchButton"/>
                <widget id="progress_bar" type="ProgressBar" value="50"/>
            </layout>
            
            <!-- 结果区域 -->
            <layout id="result_layout" type="VBoxLayout">
                <widget id="result_label" type="Label" text="操作结果将显示在这里"/>
                <widget id="submit_button" type="PrimaryPushButton" text="提交"/>
            </layout>
        </layout>
    </layouts>
    
    <!-- 事件绑定 -->
    <events>
        <event widget="primary_button" type="click" handler="on_primary_button_clicked"/>
        <event widget="normal_button" type="click" handler="on_normal_button_clicked"/>
        <event widget="toggle_button" type="click" handler="on_toggle_button_clicked"/>
        <event widget="dropdown_button" type="click" handler="on_dropdown_button_clicked"/>
        <event widget="name_input" type="change" handler="on_name_changed"/>
        <event widget="age_spinbox" type="change" handler="on_age_changed"/>
        <event widget="gender_combo" type="select" handler="on_gender_selected"/>
        <event widget="feature_switch" type="toggle" handler="on_feature_toggled"/>
        <event widget="submit_button" type="click" handler="on_submit_clicked"/>
    </events>
</application>