{
  "$id": "/components/base-attribute/1.0.0/base-attribute.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A base schema for attributes.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the attribute"
    },
    "key": {
      "type": "string",
      "description": "An identifier of the attribute, used to keep track of the attribute when it is renamed.\nThe identifier must be unique within an attribute list."
    },
    "attribute_type": {
      "type": "string",
      "description": "Type of the attribute."
    }
  },
  "required": [
    "name",
    "key",
    "attribute_type"
  ]
}
