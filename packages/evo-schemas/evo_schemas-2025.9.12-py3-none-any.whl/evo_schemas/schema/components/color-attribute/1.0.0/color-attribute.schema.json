{
  "$id": "/components/color-attribute/1.0.0/color-attribute.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "An attribute for color values.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the attribute."
    },
    "attribute_type": {
      "description": "Type of the attribute.",
      "const": "color"
    },
    "attribute_description": {
      "description": "The attribute description record.",
      "$ref": "/components/attribute-description/1.0.1/attribute-description.schema.json"
    },
    "values": {
      "description": "The values of the attributes.",
      "$ref": "/elements/color-array/1.0.1/color-array.schema.json"
    }
  },
  "required": [
    "name",
    "attribute_type",
    "values"
  ]
}
