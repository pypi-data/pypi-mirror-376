{
  "$id": "/components/material/1.0.1/material.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "This component describes a material.",
  "type": "object",
  "properties": {
    "key": {
      "type": "string",
      "description": "Unique identifier of the material."
    },
    "name": {
      "type": "string",
      "description": "Name."
    },
    "color": {
      "description": "Color.",
      "$ref": "/elements/color/1.0.1/color.schema.json"
    },
    "data_source": {
      "type": "string",
      "description": "Optional data source that contains a link to an existing Geoscience object."
    }
  },
  "required": [
    "key",
    "name",
    "color"
  ]
}
