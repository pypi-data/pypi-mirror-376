    },
    "count": {
      "title": "The number of line segments.",
      "type": "integer",
      "minimum": 0,
      "description": "The number of line segments."
    },
    "closed": {
      "title": "Closed or open",
      "type": "string",
      "description": "Closed or open.",
      "enum": [
        "Open",
        "Closed"
      ]
    }
  },
  "required": [
    "begin",
    "count",
    "closed"
  ]
}
