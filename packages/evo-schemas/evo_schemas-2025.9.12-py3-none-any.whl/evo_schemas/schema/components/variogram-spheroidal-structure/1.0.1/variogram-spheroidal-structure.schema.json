{
  "$id": "/components/variogram-spheroidal-structure/1.0.1/variogram-spheroidal-structure.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Spheroidal variogram structure.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "contribution": {
      "type": "number",
      "description": "The scaling of the structure and contribution to the total sill of the variogram model.",
      "exclusiveMinimum": 0
    },
    "alpha": {
      "title": "AlphaValue",
      "description": "Shape factor of the spheroidal model.",
      "enum": [
        3,
        5,
        7,
        9
      ],
      "type": "integer"
    },
    "anisotropy": {
      "title": "Anisotropy",
      "description": "The spatial extent and orientation of the variogram structure.",
      "$ref": "/components/ellipsoid/1.0.1/ellipsoid.schema.json"
    },
    "variogram_type": {
      "title": "Structure Type",
      "description": "type of structure - spheroidal",
      "const": "spheroidal"
    }
  },
  "required": [
    "contribution",
    "anisotropy",
    "alpha",
    "variogram_type"
  ]
}
